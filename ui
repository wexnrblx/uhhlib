local UILib = {}

function UILib.CreateWindow()
    local ScreenGui = Instance.new("ScreenGui")
    local back = Instance.new("Frame")
    local UICorner = Instance.new("UICorner")
    local mainarea = Instance.new("ScrollingFrame")
    local topframe = Instance.new("Frame")
    local TextLabel = Instance.new("TextLabel")
    local TextButton_2 = Instance.new("TextButton")
    local cizgi = Instance.new("Frame")
    local cizgi_2 = Instance.new("Frame")
    local tabs = Instance.new("ScrollingFrame")
    local UIListLayout = Instance.new("UIListLayout")

    ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
    ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

    back.Name = "back"
    back.Parent = ScreenGui
    back.AnchorPoint = Vector2.new(0.5, 0.5)
    back.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    back.Position = UDim2.new(0.5, 0, 0.5, 0)
    back.Size = UDim2.new(0, 500, 0, 300)
    UICorner.Parent = back

    mainarea.Name = "mainarea"
    mainarea.Parent = back
    mainarea.Active = true
    mainarea.BackgroundTransparency = 1.0
    mainarea.Position = UDim2.new(0.286, 0, 0.196, 0)
    mainarea.Size = UDim2.new(0, 350, 0, 241)

    topframe.Name = "topframe"
    topframe.Parent = back
    topframe.BackgroundTransparency = 1.0
    topframe.Size = UDim2.new(0, 500, 0, 69)

    TextLabel.Parent = topframe
    TextLabel.BackgroundTransparency = 1.0
    TextLabel.Position = UDim2.new(0.022, 0, 0.173, 0)
    TextLabel.Size = UDim2.new(0, 300, 0, 31)
    TextLabel.Font = Enum.Font.Michroma
    TextLabel.Text = "My UI Lib"
    TextLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    TextLabel.TextScaled = true
    TextLabel.TextXAlignment = Enum.TextXAlignment.Left

    TextButton_2.Parent = topframe
    TextButton_2.BackgroundTransparency = 1.0
    TextButton_2.Position = UDim2.new(0.936, 0, 0, 0)
    TextButton_2.Size = UDim2.new(0, 25, 0, 52)
    TextButton_2.Text = "X"
    TextButton_2.TextColor3 = Color3.fromRGB(255, 255, 255)

    cizgi.Name = "cizgi"
    cizgi.Parent = topframe
    cizgi.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
    cizgi.Position = UDim2.new(0, 0, 0.71, 0)
    cizgi.Size = UDim2.new(0, 500, 0, 3)

    cizgi_2.Name = "cizgi_2"
    cizgi_2.Parent = back
    cizgi_2.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
    cizgi_2.Position = UDim2.new(0.028, 0, 0.573, 0)
    cizgi_2.Rotation = 90
    cizgi_2.Size = UDim2.new(0, 249, 0, 4)

    tabs.Name = "tabs"
    tabs.Parent = back
    tabs.Active = true
    tabs.BackgroundTransparency = 1.0
    tabs.Position = UDim2.new(0.022, 0, 0.196, 0)
    tabs.Size = UDim2.new(0, 126, 0, 241)

    UIListLayout.Parent = tabs
    UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
    UIListLayout.Padding = UDim.new(0, 5)

    local window = {
        Tabs = tabs,
        MainArea = mainarea
    }
    return window
end

function UILib.AddTab(window, tabName)
    local tabButton = Instance.new("TextButton")
    local UICorner = Instance.new("UICorner")
    
    tabButton.Parent = window.Tabs
    tabButton.BackgroundColor3 = Color3.fromRGB(14, 14, 14)
    tabButton.Size = UDim2.new(0, 111, 0, 30)
    tabButton.Font = Enum.Font.Michroma
    tabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    tabButton.TextSize = 20
    tabButton.TextWrapped = true
    tabButton.Text = tabName
    UICorner.Parent = tabButton
    
    return tabButton
end

return UILib
